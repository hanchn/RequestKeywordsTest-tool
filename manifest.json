{
  "manifest_version": 3,
  "name": "关键词检测工具",
  "version": "1.0",
  "description": "检测网页中的关键词",
  
  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/detector.js", "content/content.js"],
    "run_at": "document_idle"
  }],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "关键词检测工具"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}